# Environment Variables for Form & Function Calc Engine

# Go API Base URL (where steel beam data is fetched from)
API_BASE_URL=http://localhost:8080

# Calc Engine Port (for local development)
CALC_ENGINE_PORT=8081

# Production API Base URL (uncomment for production)
# API_BASE_URL=https://your-go-api.vercel.app

# Vercel Environment Variables
# These are automatically set by Vercel but can be overridden
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-calc-engine.vercel.app

# Steel Beam API Configuration
BEAM_API_TIMEOUT=10

# Calculation Engine Settings
DEFAULT_SAFETY_FACTOR=1.6
DEFAULT_MATERIAL_GRADE=S355
DEFAULT_DEFLECTION_LIMIT_RATIO=250

# Logging Configuration
LOG_LEVEL=INFO

# CORS Settings (for production, specify exact origins)
ALLOWED_ORIGINS=*

# Cache Settings (if implementing caching in the future)
ENABLE_CACHING=false
CACHE_TTL=300
